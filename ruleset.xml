<?xml version="1.0"?>
<!--suppress XmlUnboundNsPrefix -->
<ruleset name="Prestashop">
    <description>Prestashop coding standard.</description>
    <rule ref="PSR2">
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>
    </rule>
    <exclude-pattern>*/composer/*</exclude-pattern>
    <exclude-pattern>*/php-sdk/*</exclude-pattern>
    <exclude-pattern>backward_compatibility/Context.php</exclude-pattern>
    <exclude-pattern>de.php</exclude-pattern>
    <exclude-pattern>en.php</exclude-pattern>
    <exclude-pattern>es.php</exclude-pattern>
    <exclude-pattern>fr.php</exclude-pattern>
    <rule ref="PSR2">
        <exclude name="PSR1.Files.SideEffects.FoundWithSymbols">
            <exclude-pattern>nostotagging.php</exclude-pattern>
        </exclude>
    </rule>
</ruleset>
